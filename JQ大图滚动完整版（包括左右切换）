<div id="con">
	<input type="button" value="按钮1">
	<input type="button" value="按钮2">
	<input type="button" value="按钮3">
	<input type="button" value="按钮4">
</div>

<script type="text/javascript" src="http://www.7wanl.com/static/7wanl_v1.1/js/jquery-1.11.3.min.js"></script>

<script type="text/javascript">
jQuery.extend({
	run: function(moveParent,clickParent,oClick,prevClick,nextClick,during){

		var $index = 0;

		function move(){

			$(moveParent).stop().animate({
				left:-$index*$(moveParent).find('img:eq(0)').width()
			});

		}

		function next(){

			$index++;

			if($index >= $(clickParent).find($(oClick)).length ){
				$index=0;
			} 

			move();
		}

		function clearTimer(){

			clearInterval(timer);

			timer=setInterval(function (){
				next();
			},during)

		}

		var timer= setInterval(function (){
			next();
		},during);

		$(clickParent).find($(oClick)).click(function (){
			clearTimer();
			$index = $(clickParent).find($(oClick)).index($(this));
			move();
		})

		$(prevClick).click(function (){
			clearTimer();
			$index--;
			if($index < 0){
				$index = $(moveParent).find('img').length-1;
			}

			move();
		});

		$(nextClick).click(function() {
			clearTimer();
			next();
		});
	}
});
  
$.run("#child","#con","input","#last","#next",3000);
//如果第四第五个参数没有，请传空，例如：$.run("#child","#con","input","","",3000);
//第一个参数： 图片父级
//第二个参数： 按钮父级
//第三个参数： 按钮对应元素：input li
//第四个参数： “上一张”按钮
//第五个参数： “下一张”按钮
//第六个参数： 时间频率
</script>
</body>
